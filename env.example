# Frontend defaults for Colyseus Cloud.
VITE_RACE_ID=prod-race
VITE_CLIENT_ROLE=player
VITE_CLIENT_NAME=sebmod9
VITE_COLYSEUS_ENDPOINT=wss://onlytactics-server.fly.dev
VITE_COLYSEUS_ROOM_ID=onlytactics-dev
VITE_DEBUG_HUD=false
VITE_PERF_HUD=false
VITE_FIXED_WIND=false
VITE_BASELINE_WIND_DEG=360
VITE_TICK_RATE=10
VITE_CLIENT_IDLE_TIMEOUT_MS=300000 # 5 minutes; set to 0 to disable auto-expire
VITE_COUNTDOWN_SECONDS=180
VITE_PENALTY_COOLDOWN_SECONDS=15
VITE_AI_ENABLED=false
VITE_RACE_TIMEOUT_MINUTES=15
VITE_LAPS_TO_FINISH=2
VITE_DEBUG_NET_LOGS=false
VITE_SPEED_MULTIPLIER=1

# Follow camera zoom multiplier (smaller = more zoomed out).
# Default is 1.33, which typically yields ~2.0x effective scale on a ~840px-tall viewport.
VITE_FOLLOW_ZOOM=1.33

# Birdseye view zoom multiplier (smaller = more zoomed out / shows more around the course).
# Default is 0.92. If boats still spawn offscreen at the start, try 0.88 - 0.90.
VITE_BIRDSEYE_ZOOM=0.92

# Wind field (puffs/lulls)
#
# IMPORTANT (Colyseus):
# - The authoritative sim is the server, so you must set the NON-VITE vars on the server process.
# - Clients will render whatever `race.windField.enabled` the server replicates.
#
# Server (Colyseus) vars:
WIND_FIELD_ENABLED=true
WIND_FIELD_INTENSITY_KTS=3
WIND_FIELD_COUNT=32
WIND_FIELD_SIZE_WORLD=320
WIND_FIELD_DOMAIN_LENGTH_WORLD=1800
WIND_FIELD_DOMAIN_WIDTH_WORLD=900
WIND_FIELD_ADVECTION_FACTOR=0.3
WIND_FIELD_TILE_SIZE_WORLD=36

# Client (Vite) vars (mostly relevant for local-host/non-Colyseus; safe to set regardless):
VITE_WIND_FIELD_ENABLED=true
VITE_WIND_FIELD_INTENSITY_KTS=3
VITE_WIND_FIELD_COUNT=32
VITE_WIND_FIELD_SIZE_WORLD=320
VITE_WIND_FIELD_DOMAIN_LENGTH_WORLD=1800
VITE_WIND_FIELD_DOMAIN_WIDTH_WORLD=900
VITE_WIND_FIELD_ADVECTION_FACTOR=0.6
VITE_WIND_FIELD_TILE_SIZE_WORLD=36

# Server / Postgres
# Local dev (docker-compose up -d):
DATABASE_URL=postgresql://onlytactics:localdev@127.0.0.1:5433/onlytactics
DATABASE_SSL=false
DATABASE_POOL_MIN=0
DATABASE_POOL_MAX=5
DATABASE_CONNECT_TIMEOUT_MS=5000
DATABASE_IDLE_TIMEOUT_MS=10000

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_COST_FACTOR=12
PASSWORD_RESET_EXPIRES_MINUTES=60

# Email (SMTP) for password reset
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@onlytactics.com
SMTP_SECURE=false

# App URL (used for email links)
APP_URL=http://localhost:5173

# Client Auth (for UI development without database)
VITE_API_URL=http://localhost:2567
VITE_MOCK_AUTH=false
