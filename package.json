{
  "name": "onlytactics",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\" \"server/**/*.{ts,tsx}\"",
    "deploy": "cd server && ./deploy.sh",
    "render:prompt-log": "node scripts/render_prompt_log.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "release": "semantic-release",
    "typecheck": "tsc -b --noEmit && npm run check --prefix server",
    "prepare": "husky",
    "e2e": "playwright test"
  },
  "dependencies": {
    "@colyseus/sdk": "^0.17.34",
    "@dimforge/rapier2d-compat": "^0.14.0",
    "idb": "^8.0.3",
    "pixi.js": "^8.14.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.58.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "semantic-release": "^24.1.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "diff": "^8.0.3",
    "npm": "^11.7.0",
    "undici": "^7.18.2",
    "minimatch": "^10.2.1"
  },
  "engines": {
    "node": ">=22"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "sh -c 'npm run typecheck'"
    ]
  }
}