{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "rootDir": "..",
    "outDir": "dist",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/config/env": ["src/config/serverEnv"],
      "@/net/identity": ["src/net/serverIdentity"],
      "@/state/raceStore": ["src/state/serverRaceStore"],
      "@/*": ["../src/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "types": ["node"]
  },
  "include": ["src", "scripts"],
  "exclude": ["node_modules"]
}

